{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./docs/.vuepress/*"]
    },
    "types": ["node"],
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "docs/.vuepress/**/*.ts",
    "docs/.vuepress/**/*.vue",
    "docs/**/*.md"
  ],
  "exclude": ["node_modules", "dist", "docs/.vuepress/cache"]
}
